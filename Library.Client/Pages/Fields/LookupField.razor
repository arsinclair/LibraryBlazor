@using System.Timers
@using DataAccessLibrary.Models
@using DataAccessLibrary.Interfaces

@inject IEntityRepository connection

@namespace Library.Client

<div class="form-group form-group-lookup">
    <label>@Label</label>
    <div class="form-control lookup lookup-bullet" @onclick="ToggleSearchMenu">@_name</div>
    <div class="search-menu @isMenuHiddenClassName">
        <div class="search-menu-header">
            <label>Search for @Output?.LogicalName</label>
            <div @onclick="ToggleSearchMenu"><i class="fas fa-times search-menu-close-icon" aria-hidden="true"></i></div>
        </div>
        <hr>
        <input type="text" placeholder="Search" @oninput="@(e => SearchStarted(e))" @bind="SearchString">
        <div class="search-results">
            @foreach (var item in SearchResults)
            {
                <div @onclick="@(e => SearchResultSelected(item.Id.ToString()))" class="search-result">@item[LookupNameSource].Value.ToString()</div>
            }
        </div>
        <hr>
        <div>@SearchResults.Count results found.</div>
    </div>
</div>

@code {
    #region Logic
    private string _name;

    private string isMenuHiddenClassName = "hidden";

    private async Task<Entity> GetSelectedEntity(EntityReference entityReference, string searchFieldName)
    {
        return await connection.GetById(entityReference, searchFieldName);
    }

    private void ToggleSearchMenu()
    {
        ClearSearchResults();
        isMenuHiddenClassName = string.IsNullOrEmpty(isMenuHiddenClassName) ? "hidden" : string.Empty;
    }

    private void ClearSearchResults()
    {
        SearchString = string.Empty;
        SearchResults.Clear();
    }

    private void SearchResultSelected(string id)
    {
        var _id = Guid.Parse(id);
        Output = SearchResults.Single(x => x.Id == _id).ToEntityReference(LookupNameSource);
        ClearSearchResults();
        ToggleSearchMenu();
        UpdateUI();
    }

    private Timer searchTimer = new Timer(400);
    private string SearchString;
    private List<Entity> SearchResults = new List<Entity>();
    void SearchStarted(ChangeEventArgs e)
    {
        if (SearchString.ToLower() != e.Value.ToString().ToLower())
        {
            SearchString = e.Value.ToString();
            if (SearchString.Length >= 3)
            {
                searchTimer.Stop();
                searchTimer.Start();
            }
        }
    }

    private async void DoSearch(Object source, ElapsedEventArgs e)
    {
        searchTimer.Stop();
        if (!string.IsNullOrEmpty(SearchString))
        {
            var _searchResults = await connection.Get(InitialValue.LogicalName, $"{LookupNameSource} LIKE '%{SearchString}%'", LookupNameSource);
            SearchResults = _searchResults.ToList();
        }
        await InvokeAsync(StateHasChanged);
    }

    private void UpdateUI()
    {
        _name = Output.Name ?? "(none)";
    }

    protected override async Task OnInitializedAsync()
    {
        bool isValuePassedFromParent = InitialValue?.Id != Guid.Empty && string.IsNullOrEmpty(InitialValue.LogicalName) == false;
        if (isValuePassedFromParent && Output == null)
        {
            var entity = await GetSelectedEntity(InitialValue, LookupNameSource);
            Output = entity?.ToEntityReference(LookupNameSource);
        }
        UpdateUI();
        searchTimer.Elapsed += DoSearch;
    }
    #endregion

    #region Input / Output
    [Parameter]
    public string Label { get; set; }

    private EntityReference _output;
    [Parameter]
    public EntityReference Output
    {
        get => _output;
        set
        {
            if (_output == value) return;
            _output = value;
            OutputChanged.InvokeAsync(value);
        }
    }

    [Parameter]
    public EntityReference InitialValue { get; set; }

    [Parameter]
    public string LookupNameSource { get; set; }

    [Parameter]
    public EventCallback<EntityReference> OutputChanged { get; set; }
    #endregion
}