@page "/CMS/"
@page "/CMS/{entityName}/{id:guid}"

@using Microsoft.Extensions.Configuration
@inject IConfiguration Configuration

<h5>Location @entityName</h5>
<h5>ID: @Id</h5>

@* @DynamicComponent *@

<a href="/CMS/Settings/Entities">Entity Settings</a>

<a href="/CMS/Entities">Entity List</a>

@code {
    [Parameter]
    public string entityName { get; set; }

    [Parameter]
    public Guid Id { get; set; }

    public ComponentBase DynamicComponent {get; set;}

    protected override void OnInitialized()
    {
        entityName = entityName ?? "ListOfEntities";
    }
}